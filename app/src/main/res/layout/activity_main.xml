<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elano.jessie.easycalc.MainActivity"
    android:orientation="vertical"
    android:background="#000">

    <EditText
        android:id="@+id/etNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:hint="Enter 1st Number"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:inputType="numberDecimal"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/etNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:hint="Enter 2nd Number"
        android:textColorHint="#d3d3d3"
        android:backgroundTint="#d3d3d3"
        android:inputType="numberDecimal"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:background="#d3d3d3"
        android:text="0"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:text="+"/>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnPlus"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:text="-"/>

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnMinus"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textSize="30sp"
                android:layout_margin="5dp"
                android:text="C"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:text="x"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnTimes"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:text="/"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnDivide"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:text="Exit"/>
    </RelativeLayout>





</LinearLayout>
